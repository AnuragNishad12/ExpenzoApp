<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#E55A2B"
                android:centerColor="#CC4E24"
                android:endColor="#B8421F"
                android:type="linear" />
            <corners android:radius="16dp" />
            <stroke android:width="0dp" android:color="@android:color/transparent" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#FF6B35"
                android:centerColor="#FF8C42"
                android:endColor="#FFAD5A"
                android:type="linear" />
            <corners android:radius="16dp" />
            <stroke android:width="0dp" android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>